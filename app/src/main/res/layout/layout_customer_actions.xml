<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:elevation="@dimen/_5sdp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_notes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recovery"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:roundPercent="1.0" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/recovery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_cash"
        app:layout_constraintBottom_toBottomOf="@+id/notes"
        app:layout_constraintEnd_toStartOf="@+id/checkIn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/notes"
        app:layout_constraintTop_toTopOf="@+id/notes"
        app:roundPercent="1.0" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/checkIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_customer_checkin"
        app:layout_constraintBottom_toBottomOf="@+id/notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/recovery"
        app:layout_constraintTop_toTopOf="@+id/notes"
        app:roundPercent="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>